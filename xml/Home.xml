<?xml version="1.0" encoding="UTF-8"?>
<!--
    Home.xml - Shadow Touch
    Kodi 22 (Piers) | Touch-first | TMDB Helper
    ============================================
    Window ID: 10000 (Home)
    Layout: Vertical Poster Grid + Bottom Navigation Bar
    Primary device: Google Pixel 7 (1080p)
-->
<window id="10000" type="home">
	<defaultcontrol always="true">9300</defaultcontrol>
	<backgroundcolor>ST_BG</backgroundcolor>

	<controls>
		<!-- ═══════════════════════════════════════
		     BACKGROUND
		     ═══════════════════════════════════════ -->
		<control type="image" id="9100">
			<left>0</left>
			<top>0</top>
			<width>2400</width>
			<height>1080</height>
			<texture colordiffuse="ST_BG">colors/white.png</texture>
			<aspectratio>stretch</aspectratio>
		</control>

		<!-- ═══════════════════════════════════════
		     POSTER GRID (TMDB Helper)
		     ═══════════════════════════════════════ -->
		<include>ShadowTouchVerticalGrid</include>

		<!-- ═══════════════════════════════════════
		     BOTTOM NAVIGATION BAR
		     ═══════════════════════════════════════ -->
		<include>ShadowTouchBottomNav</include>

	</controls>
</window>
