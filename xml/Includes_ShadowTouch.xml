<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- ============================================ -->
	<!-- SHADOW TOUCH: Vertical Poster Grid Include -->
	<!-- ============================================ -->
	<include name="ShadowTouchVerticalGrid">
		<control type="panel" id="9300">
			<depth>DepthContentPanel</depth>
			<visible>true</visible>
			<left>100</left>
			<top>100</top>
			<width>1720</width>
			<height>850</height>
			<onup>9300</onup>
			<ondown>9201</ondown>
			<onleft>9300</onleft>
			<onright>9300</onright>
			<pagecontrol>-</pagecontrol>
			<scrolltime tween="cubic" easing="out">300</scrolltime>
			<orientation>vertical</orientation>
			<preloaditems>2</preloaditems>

			<!-- Long-Press Event: Show Movie Info Dialog -->
			<onlongclick>RunScript(skin.shadow.touch,action=show_movie_info,tmdb_id=$INFO[ListItem.UniqueID(tmdb)],title=$INFO[ListItem.Label],year=$INFO[ListItem.Year])</onlongclick>
			<onclick>noop</onclick>

			<!-- Item Layout (Unfocused) -->
			<itemlayout width="320" height="480">
				<!-- Poster Image -->
				<control type="image">
					<left>10</left>
					<top>10</top>
					<width>300</width>
					<height>450</height>
					<texture background="true" fallback="DefaultVideo.png">$INFO[ListItem.Art(poster)]</texture>
					<aspectratio>scale</aspectratio>
					<bordertexture border="3" colordiffuse="40FFFFFF">colors/white.png</bordertexture>
					<bordersize>3</bordersize>
				</control>

				<!-- Title Label -->
				<control type="label">
					<left>10</left>
					<top>465</top>
					<width>300</width>
					<height>30</height>
					<font>font13</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>FFFFFFFF</textcolor>
				</control>
			</itemlayout>

			<!-- Focused Layout -->
			<focusedlayout width="320" height="480">
				<!-- Focus Glow -->
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>320</width>
					<height>460</height>
					<texture colordiffuse="button_focus">colors/white.png</texture>
					<aspectratio>stretch</aspectratio>
					<animation effect="fade" start="0" end="40" time="200">Focus</animation>
					<animation effect="fade" start="40" end="0" time="200">UnFocus</animation>
				</control>

				<!-- Poster Image (Focused) -->
				<control type="image">
					<left>10</left>
					<top>10</top>
					<width>300</width>
					<height>450</height>
					<texture background="true" fallback="DefaultVideo.png">$INFO[ListItem.Art(poster)]</texture>
					<aspectratio>scale</aspectratio>
					<bordertexture border="5" colordiffuse="button_focus">colors/white.png</bordertexture>
					<bordersize>5</bordersize>
					<animation effect="zoom" start="100" end="105" time="200" tween="sine" easing="out">Focus</animation>
					<animation effect="zoom" start="105" end="100" time="200" tween="sine" easing="out">UnFocus</animation>
				</control>

				<!-- Title Label (Focused) -->
				<control type="label">
					<left>10</left>
					<top>465</top>
					<width>300</width>
					<height>30</height>
					<font>font13</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>button_focus</textcolor>
					<animation effect="fade" start="80" end="100" time="200">Focus</animation>
					<animation effect="fade" start="100" end="80" time="200">UnFocus</animation>
				</control>
			</focusedlayout>

			<!-- Content: Popular Movies from TMDB Helper -->
			<content target="videos">plugin://plugin.video.themoviedb.helper/?info=popular&amp;type=movie</content>
		</control>
	</include>

	<!-- ============================================ -->
	<!-- SHADOW TOUCH: Bottom Navigation Bar Include -->
	<!-- ============================================ -->
	<include name="ShadowTouchBottomNav">
		<control type="group" id="9200">
			<depth>DepthBars</depth>
			<bottom>0</bottom>
			<height>120</height>
			<width>1920</width>
			<animation effect="fade" start="0" end="100" time="300" delay="300">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>

			<!-- Background -->
			<control type="image">
				<left>0</left>
				<bottom>0</bottom>
				<width>1920</width>
				<height>120</height>
				<texture colordiffuse="FF000000">colors/white.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>

			<!-- HOME Button -->
			<control type="button" id="9201">
				<left>360</left>
				<bottom>10</bottom>
				<width>240</width>
				<height>100</height>
				<label>Home</label>
				<font>font13</font>
				<textcolor>80FFFFFF</textcolor>
				<focusedcolor>button_focus</focusedcolor>
				<align>center</align>
				<aligny>center</aligny>
				<texturefocus colordiffuse="20FFFFFF">colors/white.png</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onup>9300</onup>
				<ondown>9201</ondown>
				<onleft>9205</onleft>
				<onright>9202</onright>
				<onclick>SetFocus(9300)</onclick>
			</control>

			<!-- LIVE TV Button -->
			<control type="button" id="9202">
				<left>600</left>
				<bottom>10</bottom>
				<width>240</width>
				<height>100</height>
				<label>Live TV</label>
				<font>font13</font>
				<textcolor>80FFFFFF</textcolor>
				<focusedcolor>button_focus</focusedcolor>
				<align>center</align>
				<aligny>center</aligny>
				<texturefocus colordiffuse="20FFFFFF">colors/white.png</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onup>9300</onup>
				<ondown>9202</ondown>
				<onleft>9201</onleft>
				<onright>9203</onright>
				<onclick>ActivateWindow(TVGuide)</onclick>
				<visible>!Skin.HasSetting(HomeMenuNoTVButton)</visible>
			</control>

			<!-- LIBRARY Button -->
			<control type="button" id="9203">
				<left>840</left>
				<bottom>10</bottom>
				<width>240</width>
				<height>100</height>
				<label>Library</label>
				<font>font13</font>
				<textcolor>80FFFFFF</textcolor>
				<focusedcolor>button_focus</focusedcolor>
				<align>center</align>
				<aligny>center</aligny>
				<texturefocus colordiffuse="20FFFFFF">colors/white.png</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onup>9300</onup>
				<ondown>9203</ondown>
				<onleft>9202</onleft>
				<onright>9204</onright>
				<onclick>ActivateWindow(Videos,videodb://movies/titles/,return)</onclick>
			</control>

			<!-- SEARCH Button -->
			<control type="button" id="9204">
				<left>1080</left>
				<bottom>10</bottom>
				<width>240</width>
				<height>100</height>
				<label>Search</label>
				<font>font13</font>
				<textcolor>80FFFFFF</textcolor>
				<focusedcolor>button_focus</focusedcolor>
				<align>center</align>
				<aligny>center</aligny>
				<texturefocus colordiffuse="20FFFFFF">colors/white.png</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onup>9300</onup>
				<ondown>9204</ondown>
				<onleft>9203</onleft>
				<onright>9205</onright>
				<onclick>ActivateWindow(1103)</onclick>
			</control>

			<!-- SETTINGS Button -->
			<control type="button" id="9205">
				<left>1320</left>
				<bottom>10</bottom>
				<width>240</width>
				<height>100</height>
				<label>Settings</label>
				<font>font13</font>
				<textcolor>80FFFFFF</textcolor>
				<focusedcolor>button_focus</focusedcolor>
				<align>center</align>
				<aligny>center</aligny>
				<texturefocus colordiffuse="20FFFFFF">colors/white.png</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onup>9300</onup>
				<ondown>9205</ondown>
				<onleft>9204</onleft>
				<onright>9201</onright>
				<onclick>ActivateWindow(Settings)</onclick>
			</control>
		</control>
	</include>
</includes>
