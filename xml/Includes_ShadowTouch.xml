<?xml version="1.0" encoding="UTF-8"?>
<!--
    Includes_ShadowTouch.xml
    Shadow Touch | Kodi 22 (Piers) | Touch-first
    =============================================
    Enthält:
      - ShadowTouchVerticalGrid  (Panel mit TMDB Helper)
      - ShadowTouchBottomNav     (5 Buttons, unten fixiert)

    Pixel 7 Layout (1920x1080 virtuell):
      Grid:   1920 x 930 (top=0, bottom oberhalb Nav)
      NavBar: 1920 x 150 (bottom=0)
-->
<includes>

	<!-- ═══════════════════════════════════════════════════ -->
	<!-- POSTER GRID - TMDB Helper                          -->
	<!-- Panel: scrollt vertikal, touch-optimiert           -->
	<!-- Item: 320x465px, 6 Spalten bei 1920px Breite (6x320=1920) -->
	<!-- TMDB Helper: &widget=True = gecacht, kein API-Key  -->
	<!-- ═══════════════════════════════════════════════════ -->
	<include name="ShadowTouchVerticalGrid">
		<control type="panel" id="9300">
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<!-- Höhe = Bildschirm minus NavBar minus kleiner Puffer -->
			<height>920</height>

			<!-- Touch-Navigation -->
			<onup>9300</onup>
			<ondown>9201</ondown>
			<onleft>9300</onleft>
			<onright>9300</onright>

			<!-- Scroll-Einstellungen -->
			<orientation>vertical</orientation>
			<scrolltime tween="cubic" easing="out">250</scrolltime>
			<preloaditems>3</preloaditems>
			<pagecontrol>-</pagecontrol>

			<!-- Tap → Kodi Info-Dialog für das fokussierte Item -->
			<onclick>Action(Info)</onclick>

			<!-- ─── Unfocused Layout ─── -->
			<!-- Item: 320x465px | Poster: 290x435px (2:3) | 15px Rand = 30px Abstand zwischen Covern -->
			<itemlayout width="320" height="465">
				<!-- Poster -->
				<control type="image">
					<left>15</left>
					<top>15</top>
					<width>290</width>
					<height>435</height>
					<texture background="true" fallback="DefaultVideo.png">$INFO[ListItem.Art(poster)]</texture>
					<aspectratio>scale</aspectratio>
				</control>
				<!-- Abgerundete Ecken: opake Hintergrundfarbe-Maske über dem Poster -->
				<control type="image">
					<left>15</left>
					<top>15</top>
					<width>290</width>
					<height>435</height>
					<texture>colors/poster_rounded_mask.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
			</itemlayout>

			<!-- ─── Focused Layout ─── -->
			<focusedlayout width="320" height="465">
				<!-- Hintergrund-Glow (Akzentfarbe) -->
				<control type="image">
					<left>12</left>
					<top>12</top>
					<width>296</width>
					<height>441</height>
					<texture colordiffuse="ST_GLOW">colors/white.png</texture>
					<aspectratio>stretch</aspectratio>
					<animation effect="fade" start="0" end="100" time="150">Focus</animation>
					<animation effect="fade" start="100" end="0" time="150">UnFocus</animation>
				</control>
				<!-- Poster (leicht skaliert beim Fokus) -->
				<control type="image">
					<left>15</left>
					<top>15</top>
					<width>290</width>
					<height>435</height>
					<texture background="true" fallback="DefaultVideo.png">$INFO[ListItem.Art(poster)]</texture>
					<aspectratio>scale</aspectratio>
					<animation effect="zoom" start="100" end="104" time="150" tween="sine" easing="out">Focus</animation>
					<animation effect="zoom" start="104" end="100" time="150" tween="sine" easing="out">UnFocus</animation>
				</control>
				<!-- Abgerundete Ecken: Maske sitzt über dem Poster -->
				<control type="image">
					<left>15</left>
					<top>15</top>
					<width>290</width>
					<height>435</height>
					<texture>colors/poster_rounded_mask.png</texture>
					<aspectratio>stretch</aspectratio>
					<animation effect="zoom" start="100" end="104" time="150" tween="sine" easing="out">Focus</animation>
					<animation effect="zoom" start="104" end="100" time="150" tween="sine" easing="out">UnFocus</animation>
				</control>
				<!-- Akzent-Rahmen (abgerundet, leicht innen) -->
				<control type="image">
					<left>13</left>
					<top>13</top>
					<width>294</width>
					<height>439</height>
					<bordertexture border="3" colordiffuse="ST_BORDER_FOCUS">colors/white.png</bordertexture>
					<bordersize>3</bordersize>
					<texture>-</texture>
					<animation effect="fade" start="0" end="100" time="150">Focus</animation>
					<animation effect="fade" start="100" end="0" time="150">UnFocus</animation>
				</control>
			</focusedlayout>

			<!-- ─── TMDB Helper Content ─── -->
			<!-- widget=True: gecacht + kein TMDB API-Key nötig (über TMDB Helper Settings) -->
			<content target="videos">plugin://plugin.video.themoviedb.helper/?info=popular&amp;type=movie&amp;widget=True</content>

		</control>
	</include>


	<!-- ═══════════════════════════════════════════════════ -->
	<!-- BOTTOM NAVIGATION BAR                              -->
	<!-- 5 Buttons | Fixiert unten | Touch-Targets: 150px   -->
	<!-- IDs: 9201-9205                                     -->
	<!-- ═══════════════════════════════════════════════════ -->
	<include name="ShadowTouchBottomNav">
		<control type="group" id="9200">
			<left>0</left>
			<bottom>0</bottom>
			<width>1920</width>
			<height>150</height>

			<!-- Nav Hintergrund: leicht transparent -->
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1920</width>
				<height>150</height>
				<texture colordiffuse="ST_NAV_BG">colors/white.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>

			<!-- Obere Trennlinie -->
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1920</width>
				<height>1</height>
				<texture colordiffuse="ST_SEPARATOR">colors/white.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>

			<!-- ─── HOME ─── id=9201 @ x=192 ─── -->
			<control type="button" id="9201">
				<left>192</left>
				<top>10</top>
				<width>240</width>
				<height>130</height>
				<label>Home</label>
				<font>font13</font>
				<textcolor>ST_TEXT_DIM</textcolor>
				<focusedcolor>ST_ACCENT</focusedcolor>
				<align>center</align>
				<aligny>center</aligny>
				<texturefocus colordiffuse="ST_NAV_FOCUS">colors/white.png</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onup>9300</onup>
				<ondown>9201</ondown>
				<onleft>9205</onleft>
				<onright>9202</onright>
				<onclick>SetFocus(9300)</onclick>
			</control>

			<!-- ─── LIVE TV ─── id=9202 @ x=576 ─── -->
			<control type="button" id="9202">
				<left>576</left>
				<top>10</top>
				<width>240</width>
				<height>130</height>
				<label>Live TV</label>
				<font>font13</font>
				<textcolor>ST_TEXT_DIM</textcolor>
				<focusedcolor>ST_ACCENT</focusedcolor>
				<align>center</align>
				<aligny>center</aligny>
				<texturefocus colordiffuse="ST_NAV_FOCUS">colors/white.png</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onup>9300</onup>
				<ondown>9202</ondown>
				<onleft>9201</onleft>
				<onright>9203</onright>
				<onclick>ActivateWindow(TVGuide)</onclick>
			</control>

			<!-- ─── LIBRARY ─── id=9203 @ x=840 ─── -->
			<control type="button" id="9203">
				<left>840</left>
				<top>10</top>
				<width>240</width>
				<height>130</height>
				<label>Bibliothek</label>
				<font>font13</font>
				<textcolor>ST_TEXT_DIM</textcolor>
				<focusedcolor>ST_ACCENT</focusedcolor>
				<align>center</align>
				<aligny>center</aligny>
				<texturefocus colordiffuse="ST_NAV_FOCUS">colors/white.png</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onup>9300</onup>
				<ondown>9203</ondown>
				<onleft>9202</onleft>
				<onright>9204</onright>
				<onclick>ActivateWindow(Videos,videodb://movies/titles/,return)</onclick>
			</control>

			<!-- ─── SEARCH ─── id=9204 @ x=1248 ─── -->
			<control type="button" id="9204">
				<left>1248</left>
				<top>10</top>
				<width>240</width>
				<height>130</height>
				<label>Suchen</label>
				<font>font13</font>
				<textcolor>ST_TEXT_DIM</textcolor>
				<focusedcolor>ST_ACCENT</focusedcolor>
				<align>center</align>
				<aligny>center</aligny>
				<texturefocus colordiffuse="ST_NAV_FOCUS">colors/white.png</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onup>9300</onup>
				<ondown>9204</ondown>
				<onleft>9203</onleft>
				<onright>9205</onright>
				<onclick>ActivateWindow(Search)</onclick>
			</control>

			<!-- ─── SETTINGS ─── id=9205 @ x=1488 ─── -->
			<control type="button" id="9205">
				<left>1488</left>
				<top>10</top>
				<width>240</width>
				<height>130</height>
				<label>Einstellungen</label>
				<font>font12</font>
				<textcolor>ST_TEXT_DIM</textcolor>
				<focusedcolor>ST_ACCENT</focusedcolor>
				<align>center</align>
				<aligny>center</aligny>
				<texturefocus colordiffuse="ST_NAV_FOCUS">colors/white.png</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onup>9300</onup>
				<ondown>9205</ondown>
				<onleft>9204</onleft>
				<onright>9201</onright>
				<onclick>ActivateWindow(Settings)</onclick>
			</control>

		</control>
	</include>

</includes>
