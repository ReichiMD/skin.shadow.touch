<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- ============================================ -->
	<!-- SHADOW TOUCH: Vertical Poster Grid Include -->
	<!-- ============================================ -->
	<include name="ShadowTouchVerticalGrid">
		<control type="panel" id="9300">
			<depth>DepthContentPanel</depth>
			<visible>true</visible>
			<left>100</left>
			<top>100</top>
			<width>1720</width>
			<height>850</height>
			<onup>9300</onup>
			<ondown>9201</ondown>
			<onleft>9300</onleft>
			<onright>9300</onright>
			<pagecontrol>-</pagecontrol>
			<scrolltime tween="cubic" easing="out">300</scrolltime>
			<orientation>vertical</orientation>
			<preloaditems>2</preloaditems>

			<!-- Item Layout (Unfocused - DEBUG: large + red) -->
			<itemlayout width="320" height="530">
				<!-- Poster Image -->
				<control type="image">
					<left>10</left>
					<top>10</top>
					<width>300</width>
					<height>450</height>
					<texture background="true" fallback="DefaultVideo.png">$INFO[ListItem.Art(poster)]</texture>
					<aspectratio>scale</aspectratio>
					<bordertexture border="10" colordiffuse="FFFF0000">colors/white.png</bordertexture>
					<bordersize>10</bordersize>
				</control>

				<!-- Title Label -->
				<control type="label">
					<left>10</left>
					<top>470</top>
					<width>300</width>
					<height>50</height>
					<font>font25</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>FFFF0000</textcolor>
				</control>
			</itemlayout>

			<!-- Focused Layout (DEBUG: large + green) -->
			<focusedlayout width="320" height="530">
				<!-- Focus Glow -->
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>320</width>
					<height>480</height>
					<texture colordiffuse="button_focus">colors/white.png</texture>
					<aspectratio>stretch</aspectratio>
					<animation effect="fade" start="0" end="60" time="200">Focus</animation>
					<animation effect="fade" start="60" end="0" time="200">UnFocus</animation>
				</control>

				<!-- Poster Image (Focused) -->
				<control type="image">
					<left>10</left>
					<top>10</top>
					<width>300</width>
					<height>450</height>
					<texture background="true" fallback="DefaultVideo.png">$INFO[ListItem.Art(poster)]</texture>
					<aspectratio>scale</aspectratio>
					<bordertexture border="10" colordiffuse="FF00FF00">colors/white.png</bordertexture>
					<bordersize>10</bordersize>
					<animation effect="zoom" start="100" end="110" time="200" tween="sine" easing="out">Focus</animation>
					<animation effect="zoom" start="110" end="100" time="200" tween="sine" easing="out">UnFocus</animation>
				</control>

				<!-- Title Label (Focused) -->
				<control type="label">
					<left>10</left>
					<top>470</top>
					<width>300</width>
					<height>50</height>
					<font>font25</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>FFFFFF00</textcolor>
					<animation effect="fade" start="80" end="100" time="200">Focus</animation>
					<animation effect="fade" start="100" end="80" time="200">UnFocus</animation>
				</control>
			</focusedlayout>

			<!-- Content: Popular Movies from TMDB Helper -->
			<content target="videos">plugin://plugin.video.themoviedb.helper/?info=popular&amp;type=movie</content>
		</control>
	</include>
</includes>
