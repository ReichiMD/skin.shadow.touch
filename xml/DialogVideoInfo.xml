<?xml version="1.0" encoding="UTF-8"?>
<!-- ============================================ -->
<!-- SHADOW TOUCH: Long-Press Movie Info Dialog -->
<!-- ============================================ -->
<window>
	<defaultcontrol always="true">9501</defaultcontrol>
	<controls>
		<!-- Blur Background -->
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<height>1080</height>
			<texture colordiffuse="E0000000">colors/white.png</texture>
			<aspectratio>stretch</aspectratio>
			<animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
		</control>

		<!-- Main Container (Centered Modal) -->
		<control type="group">
			<left>360</left>
			<top>140</top>
			<width>1200</width>
			<height>800</height>
			<animation effect="fade" start="0" end="100" time="300" delay="100">WindowOpen</animation>
			<animation effect="zoom" start="90" end="100" time="300" delay="100" tween="cubic" easing="out">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
			<animation effect="zoom" start="100" end="95" time="200" tween="cubic" easing="in">WindowClose</animation>

			<!-- Background Panel -->
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1200</width>
				<height>800</height>
				<texture colordiffuse="FF1A1A1A">colors/white.png</texture>
				<aspectratio>stretch</aspectratio>
				<bordertexture border="3" colordiffuse="FF333333">colors/white.png</bordertexture>
				<bordersize>3</bordersize>
			</control>

			<!-- Movie Poster (Left Side) -->
			<control type="image">
				<left>40</left>
				<top>40</top>
				<width>360</width>
				<height>540</height>
				<texture background="true" fallback="DefaultVideo.png">$INFO[Window(10000).Property(ShadowTouch.MoviePoster)]</texture>
				<aspectratio>scale</aspectratio>
				<bordertexture border="2" colordiffuse="40FFFFFF">colors/white.png</bordertexture>
				<bordersize>2</bordersize>
			</control>

			<!-- Movie Info (Right Side) -->
			<control type="group">
				<left>440</left>
				<top>40</top>
				<width>720</width>
				<height>720</height>

				<!-- Title -->
				<control type="label">
					<left>0</left>
					<top>0</top>
					<width>720</width>
					<height>60</height>
					<font>font30</font>
					<textcolor>FFFFFFFF</textcolor>
					<label>$INFO[Window(10000).Property(ShadowTouch.MovieTitle)]</label>
					<aligny>top</aligny>
				</control>

				<!-- Year + Rating Row -->
				<control type="group">
					<left>0</left>
					<top>70</top>
					<width>720</width>
					<height>40</height>

					<!-- Year -->
					<control type="label">
						<left>0</left>
						<top>0</top>
						<width>150</width>
						<height>40</height>
						<font>font16</font>
						<textcolor>A0FFFFFF</textcolor>
						<label>$INFO[Window(10000).Property(ShadowTouch.MovieYear)]</label>
						<aligny>center</aligny>
					</control>

					<!-- Rating Star -->
					<control type="label">
						<left>160</left>
						<top>0</top>
						<width>40</width>
						<height>40</height>
						<font>font16</font>
						<textcolor>FFFFFF00</textcolor>
						<label>★</label>
						<aligny>center</aligny>
					</control>

					<!-- Rating Value -->
					<control type="label">
						<left>210</left>
						<top>0</top>
						<width>150</width>
						<height>40</height>
						<font>font16</font>
						<textcolor>A0FFFFFF</textcolor>
						<label>$INFO[Window(10000).Property(ShadowTouch.MovieRating)]</label>
						<aligny>center</aligny>
					</control>
				</control>

				<!-- Genre -->
				<control type="label">
					<left>0</left>
					<top>120</top>
					<width>720</width>
					<height>30</height>
					<font>font13</font>
					<textcolor>80FFFFFF</textcolor>
					<label>$INFO[Window(10000).Property(ShadowTouch.MovieGenres)]</label>
					<aligny>center</aligny>
				</control>

				<!-- Runtime -->
				<control type="label">
					<left>0</left>
					<top>155</top>
					<width>720</width>
					<height>30</height>
					<font>font13</font>
					<textcolor>80FFFFFF</textcolor>
					<label>$INFO[Window(10000).Property(ShadowTouch.MovieRuntime)]</label>
					<aligny>center</aligny>
					<visible>!String.IsEmpty(Window(10000).Property(ShadowTouch.MovieRuntime))</visible>
				</control>

				<!-- Plot (Description) -->
				<control type="textbox">
					<left>0</left>
					<top>200</top>
					<width>720</width>
					<height>320</height>
					<font>font13</font>
					<textcolor>C0FFFFFF</textcolor>
					<label>$INFO[Window(10000).Property(ShadowTouch.MoviePlot)]</label>
					<autoscroll time="3000" delay="4000" repeat="5000">true</autoscroll>
					<align>left</align>
				</control>

				<!-- Cast -->
				<control type="label">
					<left>0</left>
					<top>540</top>
					<width>720</width>
					<height>30</height>
					<font>font12</font>
					<textcolor>60FFFFFF</textcolor>
					<label>Cast: $INFO[Window(10000).Property(ShadowTouch.MovieCast)]</label>
					<visible>!String.IsEmpty(Window(10000).Property(ShadowTouch.MovieCast))</visible>
				</control>

				<!-- Director -->
				<control type="label">
					<left>0</left>
					<top>575</top>
					<width>720</width>
					<height>30</height>
					<font>font12</font>
					<textcolor>60FFFFFF</textcolor>
					<label>Director: $INFO[Window(10000).Property(ShadowTouch.MovieDirector)]</label>
					<visible>!String.IsEmpty(Window(10000).Property(ShadowTouch.MovieDirector))</visible>
				</control>

				<!-- Action Buttons Row -->
				<control type="group">
					<left>0</left>
					<top>640</top>
					<width>720</width>
					<height>80</height>

					<!-- Close Button (Left) -->
					<control type="button" id="9501">
						<left>0</left>
						<top>0</top>
						<width>220</width>
						<height>70</height>
						<label>Schließen</label>
						<font>font14</font>
						<textcolor>FFFFFFFF</textcolor>
						<focusedcolor>FF000000</focusedcolor>
						<align>center</align>
						<aligny>center</aligny>
						<texturefocus colordiffuse="FFFFFFFF">colors/white.png</texturefocus>
						<texturenofocus colordiffuse="40FFFFFF">colors/white.png</texturenofocus>
						<onup>9501</onup>
						<ondown>9501</ondown>
						<onleft>9503</onleft>
						<onright>9502</onright>
						<onclick>Dialog.Close(all,true)</onclick>
					</control>

					<!-- Watchlist Button (Center) -->
					<control type="button" id="9502">
						<left>250</left>
						<top>0</top>
						<width>220</width>
						<height>70</height>
						<label>Merkliste</label>
						<font>font14</font>
						<textcolor>FFFFFFFF</textcolor>
						<focusedcolor>FF000000</focusedcolor>
						<align>center</align>
						<aligny>center</aligny>
						<texturefocus colordiffuse="button_focus">colors/white.png</texturefocus>
						<texturenofocus colordiffuse="40FFFFFF">colors/white.png</texturenofocus>
						<onup>9502</onup>
						<ondown>9502</ondown>
						<onleft>9501</onleft>
						<onright>9503</onright>
						<onclick>RunScript(skin.shadow.touch,action=add_to_watchlist,tmdb_id=$INFO[ListItem.Property(tmdb_id)])</onclick>
					</control>

					<!-- Mark as Watched Button (Right) -->
					<control type="button" id="9503">
						<left>500</left>
						<top>0</top>
						<width>220</width>
						<height>70</height>
						<label>Gesehen</label>
						<font>font14</font>
						<textcolor>FFFFFFFF</textcolor>
						<focusedcolor>FF000000</focusedcolor>
						<align>center</align>
						<aligny>center</aligny>
						<texturefocus colordiffuse="button_focus">colors/white.png</texturefocus>
						<texturenofocus colordiffuse="40FFFFFF">colors/white.png</texturenofocus>
						<onup>9503</onup>
						<ondown>9503</ondown>
						<onleft>9502</onleft>
						<onright>9501</onright>
						<onclick>RunScript(skin.shadow.touch,action=mark_as_watched,tmdb_id=$INFO[ListItem.Property(tmdb_id)])</onclick>
					</control>
				</control>
			</control>
		</control>

		<!-- Hidden Kodi default buttons (required for compatibility) -->
		<control type="button" id="6">
			<visible>false</visible>
		</control>
		<control type="button" id="8">
			<visible>false</visible>
		</control>
		<control type="button" id="10">
			<visible>false</visible>
		</control>
		<control type="button" id="11">
			<visible>false</visible>
		</control>
	</controls>
</window>
