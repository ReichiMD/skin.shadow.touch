	<!-- Background -->
	<color name="ST_BG">FF0A0A0F</color>
	<!-- Navigation bar background (semi-transparent black) -->
	<color name="ST_NAV_BG">E6060608</color>
	<!-- Accent / focus highlight -->
	<color name="ST_ACCENT">FF4A9FFF</color>
	<!-- Primary text (bright white) -->
	<color name="ST_TEXT">FFFAFAFA</color>
	<!-- Secondary text (dimmed) -->
	<color name="ST_TEXT_DIM">80FAFAFA</color>
	<!-- Poster border: unfocused (nearly invisible) -->
	<color name="ST_BORDER">1AFFFFFF</color>
	<!-- Poster border: focused (accent) -->
	<color name="ST_BORDER_FOCUS">CC4A9FFF</color>
	<!-- Focus glow overlay on poster -->
	<color name="ST_GLOW">334A9FFF</color>
	<!-- Nav button focus background -->
	<color name="ST_NAV_FOCUS">264A9FFF</color>
	<!-- Separator lines -->
	<color name="ST_SEPARATOR">1AFFFFFF</color>

	<!-- ─── Floating Pill Navigation Bar (Glassmorphism) ─── -->
	<!-- Pill background: 80% opacity, very dark blue-black -->
	<color name="ST_PILL_BG">CC0A0A14</color>
	<!-- Drop shadow: 16% opacity black, offset below pill -->
	<color name="ST_PILL_SHADOW">28000000</color>
	<!-- Pill border: 12% opacity white (subtle outline) -->
	<color name="ST_PILL_BORDER">1EFFFFFF</color>
	<!-- Top highlight: 25% opacity white (pseudo-lighting from above) -->
	<color name="ST_PILL_TOP">40FFFFFF</color>
